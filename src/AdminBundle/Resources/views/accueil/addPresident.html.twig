{% extends 'AdminBundle::layout1.html.twig' %}
{% block title %} Ajouter President du club{% endblock %}
{% block body %}
    <div class="content">
        <div class="header">
            <h1 class="page-title">Ajouter President</h1>
            <ul class="breadcrumb">
                <li><a href="{{ path('admin_accueil') }}">Accueil</a></li>
                <li><a href="{{ path('add_president') }}">Ajouter un president</a></li>
            </ul>
        </div>
        <div class="main-content">
            <div class="row">
                <div class="col-md-offset-1 col-md-9">
                    <br>
                    <div id="myTabContent" class="tab-content">
                        <div class="tab-pane active in" id="home">
                            {{ form_start(formPresident, {'attr' : {'id':'formID'} }) }}
                                <div class="form-group">
                                    {{ form_label (formPresident.nomPresident) }}
                                    {{ form_widget (formPresident.nomPresident) }}
                                    {{ form_errors (formPresident.nomPresident) }}
                                </div>
                                <div class="form-group">
                                    {{ form_label (formPresident.prenomPresident) }}
                                    {{ form_widget (formPresident.prenomPresident) }}
                                    {{ form_errors (formPresident.prenomPresident) }}
                                </div>
                                <div class="form-group">
                                    {{ form_label (formPresident.username) }}
                                    {{ form_widget (formPresident.username) }}
                                    {{ form_errors (formPresident.username) }}
                                </div>
                                <div class="form-group">
                                    {{ form_label (formPresident.email) }}
                                    {{ form_widget (formPresident.email) }}
                                    {{ form_errors (formPresident.email) }}
                                </div>
                                <div class="form-group">
                                    {{ form_label (formPresident.password) }}
                                    {{ form_widget (formPresident.password) }}
                                    {{ form_errors (formPresident.password) }}
                                </div>
                                <div class="form-group">
                                    {{ form_label (formPresident.plainPassword) }}
                                    {{ form_widget (formPresident.plainPassword) }}
                                    {{ form_errors (formPresident.plainPassword) }}
                                </div>
                                <div class="form-group">
                                    {{ form_label (formPresident.telPresident) }}
                                    {{ form_widget (formPresident.telPresident) }}
                                    {{ form_errors (formPresident.telPresident) }}
                                </div>
                            <div class="btn-toolbar list-toolbar">
                                <button type="submit" class="btn btn-primary"><i class="fa fa-save"></i> Valider </button>
                                <a href="{{ path('list_club') }}"  class="btn btn-danger">Annuler</a>
                            </div>
                            {{ form_end(formPresident) }}
                        </div>
                    </div>


                </div>
            </div>
        </div>
    </div>
{% endblock %}





